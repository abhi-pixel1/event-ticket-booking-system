<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.fest.fest.Controller.EventDetailsController">
    <Label text="Event Name:"/>
    <Label fx:id="eventNameLabel" style="-fx-font-weight: bold;" />

    <Label text="Description:"/>
    <Label fx:id="descriptionLabel" wrapText="true" />

    <Label text="Start Time:"/>
    <Label fx:id="startTimeLabel" />

    <Label text="End Time:"/>
    <Label fx:id="endTimeLabel" />

    <Label text="Place:"/>
    <Label fx:id="placeLabel" />

    <Label text="Date:"/>
    <Label fx:id="dateLabel" />

    <Label text="Ticket Type:"/>
    <Label fx:id="ticketTypeLabel1" />

    <Label text="Price:"/>
    <Label fx:id="priceLabel1" />

    <Label text="Number of Seats:"/>
    <Label fx:id="noOfSeatsLabel1" />

    <Label text="Ticket Type:"/>
    <Label fx:id="ticketTypeLabel2" />

    <Label text="Price:"/>
    <Label fx:id="priceLabel2" />

    <Label text="Number of Seats:"/>
    <Label fx:id="noOfSeatsLabel2" />

    <RadioButton text="Platinum" fx:id="platinum"/>
    <RadioButton text="Gold" fx:id="gold"/>
    <RadioButton text="Silver" fx:id="silver"/>


    <TextField fx:id="no_of_tickets" promptText="Number_of Tickets"/>

    <Button text="Submit" onAction="#handleSubmit"/>


</VBox>
