<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.fest.fest.Controller.ClubRegistrationController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox spacing="10" alignment="CENTER" prefHeight="200" prefWidth="600" >

        <HBox spacing="10" alignment="CENTER">
            <Label text="User Name:" />
            <TextField fx:id="userNameField" prefWidth="200" />
        </HBox>

        <HBox spacing="10" alignment="CENTER">
            <Label text="Email:" />
            <TextField fx:id="emailField" prefWidth="200" />
        </HBox>

        <HBox spacing="10" alignment="CENTER">
            <Label text="clubName:" />
            <TextField fx:id="clubNameField" prefWidth="200" />
        </HBox>

        <HBox spacing="10" alignment="CENTER">
            <Label text="Department:" />
            <TextField fx:id="departmentField" prefWidth="200" />
        </HBox>

        <HBox spacing="10" alignment="CENTER">
            <Label text="Faculty Incharge:" />
            <TextField fx:id="facultyField" prefWidth="200" />
        </HBox>

        <HBox spacing="10" alignment="CENTER">
            <Label text="Set Password:" />
            <TextField fx:id="passwordField" prefWidth="200" />
        </HBox>

        <Button text="Create Event" onAction="#clubReg" />

    </VBox>

</AnchorPane>
